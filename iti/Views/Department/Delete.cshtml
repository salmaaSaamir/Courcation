@model Department
@{
    ViewData["Title"] = "Delete";
}

<form asp-action="SaveDelete" asp-controller="Department" asp-route-id="@Model.Id" class="text-capitalize">
    <div class="container-fluid callback my-5 pt-5">
        <div class="container pt-5">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="bg-white border rounded p-4 p-sm-5 wow fadeInUp" data-wow-delay="0.5s" style="background-color:#6f4518">
                        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                            <p class="d-inline-block border rounded fw-semi-bold py-1 px-3" style="color:#6f4518">
                                Delete department Data
                            </p>
                            <h1 class="display-5 mb-5" style="color:#6f4518"> department Data</h1>
                        </div>
                        <input asp-for="Id" hidden value="@Model.Id" />
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Name" value="@Model.Name" disabled>
                                    <label for="name">Department Name</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Code" value="@Model.Code" disabled>
                                    <label for="code">Department Code</label>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="ManagerName" value="@Model.ManagerName" disabled>
                                    <label>ManagerName </label>
                                </div>
                            </div>
                           
                            <div class="col-12 text-center">
                                <input class="btn text-white text-capitalize w-100 py-3" style="background-color:#6f4518" type="submit" value="Delete Data" />
                            </div>
                            <div class="col-12 text-center">
                                <a class="btn text-white text-capitalize w-100 py-3" style="background-color:#6f4518" asp-action="Index"> back to Departments list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

