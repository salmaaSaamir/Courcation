@model iti.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="DeleteConfirmed" asp-controller="Courses" asp-route-id="@Model.Id" class="text-capitalize">
    <div class="container-fluid callback my-5 pt-5">
        <div class="container pt-5">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="bg-white border rounded p-4 p-sm-5 wow fadeInUp" data-wow-delay="0.5s" style="background-color:#6f4518">
                        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                            <p class="d-inline-block border rounded fw-semi-bold py-1 px-3" style="color:#6f4518">
                                Delete Course Data
                            </p>
                            <h1 class="display-5 mb-5" style="color:#6f4518"> Course Data</h1>
                        </div>
                        <input asp-for="Id" hidden value="@Model.Id" />
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="CourseCode" value="@Model.CourseCode" disabled>
                                    <label for="CourseCode">Course Code</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Hours" value="@Model.Hours" disabled>
                                    <label>Course Hours </label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Department.Name" value="@Model.Department.Name" disabled>
                                    <label for="DepartmentName">Department Name</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="CourseName" value="@Model.CourseName" disabled>
                                    <label>Course Name </label>
                                </div>
                            </div>

                            <div class="col-12 text-center">
                                <input class="btn text-white text-capitalize w-100 py-3" style="background-color:#6f4518" type="submit" value="Delete Data" />
                            </div>
                            <div class="col-12 text-center">
                                <a class="btn text-white text-capitalize w-100 py-3" style="background-color:#6f4518" asp-action="Index"> back to courses list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
