@model Student
@{
    ViewData["Title"] = "Edite";
    SelectList items = new SelectList(ViewBag.Department, "Id", "Name");
}
<form asp-action="SaveEdite" asp-controller="Student" class="text-capitalize" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="container-fluid callback my-5 pt-5">
        <div class="container pt-5">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="bg-white border rounded p-4 p-sm-5 wow fadeInUp" data-wow-delay="0.5s" style="background-color:#6f4518">
                        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                            <p class="d-inline-block border rounded fw-semi-bold py-1 px-3" style="color:#6f4518">
                                Edite Student Data
                            </p>
                            <h1 class="display-5 mb-5" style="color:#6f4518"> Student Data</h1>
                        </div>
                        <input asp-for="Id" value="@Model.Id" hidden />
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Name" placeholder="Name">
                                    <label for="name">Stuedent Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Code" placeholder="code">
                                    <label for="name">Stuedent code</label>
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Address" placeholder="Address">
                                    <label>Student Address</label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Age" placeholder="Age">
                                    <label>Student Age</label>
                                    <span asp-validation-for="Age" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Level" placeholder="Level">
                                    <label>Student Level</label>
                                    <span asp-validation-for="Level" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6" hidden>
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Gpa" value="@Model.Gpa">
                                    <label>Student Gpa</label>
                                    <span asp-validation-for="Gpa" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6" hidden>
                                <div class="form-floating">
                                    <input class="form-control" asp-for="Image" placeholder="Image" value="img.jpg">
                                    <label>Student Image</label>
                                </div>
                            </div>





                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input class="form-control" type="file" asp-for="ImageFile" value="@Model.Image">
                                    <label>Student Image</label>
                                    <span><img src="/Uploads/@Model.Image" width="100" height="100" class="m-2" /> </span>

                                </div>
                            </div>

                          
                            <div class="col-12">
                                <div class="form-floating">
                                    <select asp-items="items" asp-for="Dept" class="form-control text-center p-2">
                                        <option value="0">--select an option--</option>
                                    </select>
                                    <span asp-validation-for="Dept" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 text-center mb-3 mt-3">
                            <input class="btn text-white text-capitalize w-100 py-3" style="background-color:#6f4518" type="submit" value="Edite Data" />
                        </div>
                        <div class="col-12 text-center">
                            <a class="btn text-white text-capitalize w-100 py-3" style="background-color:#6f4518" asp-action="Index"> back to student list</a>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>