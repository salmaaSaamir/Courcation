@model Student
@{
    SelectList items = new SelectList(ViewBag.Department, "Id", "Name");
}
<div class="row g-3">
                        <div class="col-sm-6">
                            <div class="form-floating">
                                <input class="form-control" asp-for="Name" placeholder="Name">
                                <label for="name">Stuedent Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-floating">
                                <input class="form-control" asp-for="Code" placeholder="code">
                                <label for="name">Stuedent code</label>
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-floating">
                                <input class="form-control" asp-for="Address" placeholder="Address">
                                <label>Student Address</label>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-floating">
                                <input class="form-control" asp-for="Age" placeholder="Age">
                                <label>Student Age</label>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-floating">
                                <input class="form-control" asp-for="Level" placeholder="Level">
                                <label>Student Level</label>
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6" >
                            <div class="form-floating">
                                <input class="form-control" asp-for="Gpa" value="@Model.Gpa" >
                                <label>Student Gpa</label>
                                <span asp-validation-for="Gpa" class="text-danger"></span>
                            </div>
                        </div>
    <div class="col-sm-6" >
        <div class="form-floating">
            <input class="form-control" asp-for="Image" placeholder="Image" value="@Model.Image">
            <label>Student Image</label>
        </div>
    </div>





    <div class="col-sm-6">
        <div class="form-floating">
            <input class="form-control" type="file" asp-for="ImageFile" value="@Model.Image" disapled>
            <label>Student Image</label>
            <span><img src="/Uploads/@Model.Image" width="100" height="100" class="m-2" /> </span>

        </div>
    </div>
                      
                        <div class="col-12">
                            <div class="form-floating">
                                <select asp-items="items" asp-for="Dept" class="form-control text-center p-2">
                                    <option value="0">--select an option--</option>
                                </select>
                                <span asp-validation-for="Dept" class="text-danger"></span>
                            </div>
                        </div>
                    </div>