<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Courcation - Courses Center For Students</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;500&display=swap"rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />


    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/iti.styles.css" asp-append-version="true" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
 
    <!-- Navbar Start -->
    <div class="container-fluid fixed-top px-0 wow fadeIn" data-wow-delay="0.1s">
        <div class="top-bar row gx-0 align-items-center d-none d-lg-flex">
            <div class="col-lg-6 px-5 text-start">
                <small><i class="fa fa-map-marker-alt me-2" style="color:#6f4518"></i>123 Street, Cairo, Egypt</small>
                <small class="ms-4"><i class="fa fa-clock me-2" style="color:#6f4518"></i>9.00 am - 9.00 pm</small>
            </div>
            <div class="col-lg-6 px-5 text-end">
                <small><i class="fa fa-envelope me-2" style="color:#6f4518"></i>Cordation@example.com</small>
                <small class="ms-4"><i class="fa fa-phone-alt  me-2" style="color:#6f4518"></i>+012 345 6789</small>
            </div>
            
        </div>

        <nav class="navbar navbar-expand-lg navbar-light py-lg-0 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand ">
                <h1 class="display-5  m-0" style="color:#6f4518;">Courcation</h1>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a asp-action="Index" asp-controller="Home" class="nav-item nav-link">Home</a>
                    <a asp-action="About" asp-controller="Home" class="nav-item nav-link">About</a>
                    <a asp-action="Services" asp-controller="Home" class="nav-item nav-link">Services</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a asp-action="NewRole" asp-controller="Roles" class="nav-item nav-link">Add Role</a>
                        <a asp-action="AddAdmin" asp-controller="Account" class="nav-item nav-link mx-2">Add Admin</a>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                            <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu border-light m-0">
                                <a asp-action="Index" asp-controller="Student" class="dropdown-item">Students</a>
                            @if (User.IsInRole("admin"))
                            {
                               
                                    
                                    <a asp-action="Index" asp-controller="Department" class="dropdown-item">Departments</a>
                                    <a asp-action="Index" asp-controller="Courses" class="dropdown-item">Courses</a>
                                
                            }
                            </div>
                        </div>
                    }
                    
                    <a asp-action="Contact" asp-controller="Home" class="nav-item nav-link">Contact</a>
                </div>
                <div class="d-none d-lg-flex ms-2">
                    <a class="btn btn-light btn-sm-square rounded-circle ms-3" style="background-color:#d9c5b4">
                        <small class="fab fa-facebook-f" style="color:#6f4518"></small>
                    </a>
                    <a class="btn btn-light btn-sm-square rounded-circle ms-3" style="background-color:#d9c5b4">
                        <small class="fab fa-twitter" style="color:#6f4518"></small>
                    </a>
                    <a class="btn btn-light btn-sm-square rounded-circle ms-3" style="background-color:#d9c5b4" >
                        <small class="fab fa-linkedin-in" style="color:#6f4518"></small>
                    </a>
                </div>
            </div>
            <div class="collapse navbar-collapse justify-content-end navbar-nav ">
                @if (User.Identity.IsAuthenticated==false)
                {
                    <a asp-action="Login" asp-controller="Account" class=" mx-2 nav-item nav-link">Login</a>
                    <a asp-action="Register" asp-controller="Account" class="nav-item nav-link mx-2">Register</a>
                }
                else
                { 
                    <p style="color:#6f4518" class="m-4"> <i class="fas fa-user"></i> @User.Identity.Name</p>
                    <a asp-action="Logout" asp-controller="Account" class=" nav-item nav-link mx-2">Logout</a>

                }
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="/img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-lg-8">
                                    <p class="d-inline-block border border-white rounded  fw-semi-bold py-1 px-3 animated slideInDown" style="color:#6f4518">
                                        Welcome to Courcation
                                    </p>
                                    <h1 class="display-1 mb-4 animated slideInDown" style="color:#693a00">
                                        Your Education Status Is Our Goal
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <!-- Carousel End -->
    <!-- Body Start -->
    <div class="container-xxl py-5">
        @RenderBody()
    </div>
    
    <!-- Footer Start -->
    <div class="container-fluid  footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <h4 class="mb-4" style="color:#6f4518">Our Office</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>123 Street, Cairo, Egypt</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+012 345 67890</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i> Courcation@example.com</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-square  rounded-circle me-2" style="border-color:#d9c5b4">
                            <i class="fab fa-twitter" style="color:#6f4518"></i>
                        </a>
                        <a class="btn btn-square rounded-circle me-2" style="border-color:#d9c5b4">
                            <i class="fab fa-facebook-f" style="color:#6f4518"></i>
                        </a>

                        <a class="btn btn-square rounded-circle me-2" style="border-color:#d9c5b4">
                            <i class="fab fa-linkedin-in" style="color:#6f4518"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h4 class="mb-4" style="color:#6f4518">Services</h4>
                    <a class="btn btn-link" asp-action="Services" asp-controller="Home">Education Planning</a>
                    <a class="btn btn-link" asp-action="Services" asp-controller="Home">Cash Investment</a>
                    <a class="btn btn-link" asp-action="Services" asp-controller="Home">Expert Teachers</a>
                    
                </div>
                <div class="col-lg-4 col-md-6">
                    <h4 class=" mb-4" style="color:#6f4518">Quick Links</h4>
                    <a class="btn btn-link" asp-action="About" asp-controller="Home">About Us</a>
                    <a class="btn btn-link" asp-action="Contact" asp-controller="Home">Contact Us</a>
                    <a class="btn btn-link" asp-action="Services" asp-controller="Home">Our Services</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid copyright py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="border-bottom" href="#">Your Site Name</a>, All Right Reserved.
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                    Designed By <a class="border-bottom" href="https://htmlcodex.com">HTML Codex</a> Distributed By <a href="https://themewagon.com">ThemeWagon</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg  btn-lg-square rounded-circle back-to-top" style="background-color:#6f4518">
        <i class="bi bi-arrow-up text-white" ></i>
    </a>
    <!-- JavaScript Libraries -->
   
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/counterup/counterup.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>